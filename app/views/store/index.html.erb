

<h1>Store</h1>
<% @products.each do |product| %>
	
	<div class="product">
		<h3><%= product.title %></h3>
		<p><%= sanitize(product.description) %></p>
		<div class="price_line">
			<span class="price"><%= number_to_currency(product.category) %></span>
			<%= button_to 'Add to Cart', line_items_path(product_id: product) %>
		</div>

	</div>

<% end %>